<h2>Edit the book: {{bookDetails.title}}</h2>
 
<form action="/books/{{id}}/edit" method="post">
  <label> Title:
    <input type="text" name="title" value="{{bookDetails.title}}" />
  </label>
 
  <label> Author:
    <select name="author" >
        {{#each authors}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>

    {{!-- <input type="text" name="author" value="{{author}}" /> --}}
  </label>
 
  <label> Description:
    <textarea name="description" cols="30" rows="4">{{bookDetails.description}}</textarea>
  </label>
 
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{bookDetails.rating}}" />
  </label>
 
  <button>Save changes</button>
</form>
